h2.container__title--port Projects
.projects__wrap
  each projects, slug in public.projects._data
    .projects__box
      a.projects__link(href="#{ projects.sites }" target="_blank")
        .projects__frame
          img.projects__image(src="assets/projects-#{ projects.image }.png")
        .projects__descriptive
          h4.projects__tag #{ projects.title }
          p.projects__desc #{ projects.desc }
button.projects__button.projects__button--left.is-mobile-hidden(data-scroll) &#60;
button.projects__button.projects__button--right.is-mobile-hidden(data-scroll) &#62;
