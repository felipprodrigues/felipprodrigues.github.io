.resume__container
  aside.aside.is-tablet-hidden
    ul.aside__list
      for icon, slug in public.resume._data
        li.aside__elements
          a.aside__button(data-aside="#{ icon.attribute }")
            svg.aside__icons
              use(xlink:href="assets/defs.svg#icon-#{ icon.icon }")
          span.aside__tooltip #{ icon.tooltip }

  nav.tabs
    ul.list
      each att, i in tabsAttributes
        li.list__items
          a.tabs__holder(data-trigger="#{att}")
            span.tabs__item #{ tabsItems[i] }
            svg.tabs__icon
              use(xlink:href="assets/defs.svg#icon-close")

  .card.is-mobile-wide
    .card__holder.is-wide(data-panel="files")
      each att, i in tabsAttributes
        .card__holder--within(data-preview="#{att}")
          .card__header
            h1.card__title
              span.card__items--faded #{ commentH1.open }
              | #{ headerTitle[i] }
              span.card__items--faded #{ commentH1.close }
            h3.card__subtitle
              span.card__items--faded #{ commentH3.open }
              | #{ headerSubtitle[i] }
              span.card__items--faded #{ commentH3.close }

          if att === conditionalAttributes.one
            .card__qualifiers
              span.card__comment.is-commented-out #{ keyComment }
              ul.card__list
                li.card__items--faded #{ commentUl.open }
                each items in eventList
                  li.card__items.card__items--faded #{ commentLi }
                    span.card__items.card__items--highlight #{ items }
                li.card__items--faded #{ commentUl.close }

          else if att === conditionalAttributes.two
            .card__qualifiers
              span.card__comment.is-commented-out #{ keyComment }
              ul.card__list
                li.card__items--faded #{ commentUl.open }
                each items in camList
                  li.card__items.card__items--faded #{ commentLi }
                    span.card__items.card__items--highlight #{ items }
                li.card__items--faded #{ commentUl.close }

          else if att === conditionalAttributes.three
            .card__qualifiers
              span.card__comment.is-commented-out #{ keyComment }
              ul.card__list
                li.card__items--faded #{ commentUl.open }
                each items in tanList
                  li.card__items.card__items--faded #{ commentLi }
                    span.card__items.card__items--highlight #{ items }
                li.card__items--faded #{ commentUl.close }

          else if att === conditionalAttributes.four
            .card__qualifiers
              span.card__comment.is-commented-out #{ keyComment }
              ul.card__list
                li.card__items--faded #{ commentUl.open }
                each items in themeList
                  li.card__items.card__items--faded #{ commentLi }
                    span.card__items.card__items--highlight #{ items }
                li.card__items--faded #{ commentUl.close }

    .card__holder.has-center-block.is-wide.no-space-out(data-panel="search")
      a#buttonPreview.card__button.card__button--spaced.no-decoration Preview Resume
        svg
          use(xlink:href="assets/defs.svg#icon-preview")
      a.card__button.card__button--spaced.no-decoration(href="assets/download/farResume.pdf" download="felipe-resume") Download Resume
        svg
          use(xlink:href="assets/defs.svg#icon-download")

    .card__holder.has-center-block.is-wide.no-space-out(data-panel="source")
      p.card__items.card__items--highlight.card__items--padded Feel free to explore how this project was made by simply clicking
        a.card__items.card__items--link.no-decoration(href="https://github1s.com/felipprodrigues/felipprodrigues.github.io" target="_blank")
          |&nbsp; here
        |&nbsp; and get a full preview of the entire code
      .card__info
        a(href="#").card__message
          svg
            use(xlink:href="assets/defs.svg#icon-info")
          span.card__items Make sure to be logged in github to access the link above.

    .card__holder.is-wide(data-panel="debugger")
      .card__wrapper.card__wrapper--centered
        .card__block.card__block--full
          .card__header
            span.card__comment.is-commented-out #{ debugComment.commentList }
          ul.card__list.card__list--fadded
            each item, i in debugItems
              li.card__items.card__items--bordered
                a.card__items--highlight.is-flex-spaced.no-decoration.is-padded(target="_blank" href="#{ debugLinks[i] }") #{ item }
                  span.card__items--azure #{ debugAuthor[i] }
      .card__wrapper.card__wrapper--centered
        .card__block.card__block--full
          .card__header
            span.card__comment.is-commented-out #{ debugComment.commentTags }
          ul.card__list.card__list--horizontal.is-flex-spaced
            each item, i in debugReference
              li.card__items.card__items--spaced.has-responsive-margin.no-space-in
                a(target="_blank" href="#{ debugHook[i] }").card__items--highlight.card__items--tagged.no-decoration #{ item }

    .card__holder.is-wide(data-panel="extension")
      .card__wrapper.card__wrapper--centered.has-full-height
        .card__block.card__block--full.card__block--justified
          .card__header
            span.card__comment.is-commented-out //- Commonly used tools
          .card__bind
            ul.card__list.card__list--spaced.is-flex-spaced.no-space-in
              span Markup
              .card__list.card__list--horizontal.no-space-in
                each item in extensionMarkup
                  li.card__items.card__items--dispersed.no-space-in
                    span.card__items--highlight.card__items--tagged.card__items--static.no-decoration #{ item }
            ul.card__list.card__list--spaced.is-flex-spaced.no-space-in
              span Styles
              .card__list.card__list--horizontal.no-space-in
                each item in extensionStyle
                  li.card__items.card__items--dispersed.no-space-in
                    span.card__items--highlight.card__items--tagged.card__items--static.no-decoration #{ item }
            ul.card__list.card__list--spaced.is-flex-spaced.no-space-in
              span Scripts
              .card__list.card__list--horizontal.no-space-in
                each item in extensionScript
                  li.card__items.card__items--dispersed.no-space-in
                    span.card__items--highlight.card__items--tagged.card__items--static.no-decoration #{ item }

